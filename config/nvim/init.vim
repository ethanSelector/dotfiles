" Minimal Neovim config

" Use system clipboard
set clipboard=unnamedplus

" Line numbers
set number

" Enable syntax highlighting
syntax on

" Set tabs and indentation
set tabstop=4
set shiftwidth=4
set expandtab

" Enable mouse
set mouse=a

" Vimscript style
if has("termguicolors")
  set termguicolors
endif


